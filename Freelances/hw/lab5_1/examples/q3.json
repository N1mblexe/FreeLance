{
  "name": "Q3 - Distance Between Nodes with Path",
  "description": "Find the distance between two nodes in a BST and return the path",
  "treeType": "BST",
  "values": [10, 5, 15, 3, 7, 12, 20],
  "testCases": [
    {
      "description": "Distance from 3 to 12 (through root)",
      "query": {"val1": 3, "val2": 12},
      "expected": {
        "distance": 4,
        "path": [3, 5, 10, 15, 12],
        "pathLength": 5
      }
    },
    {
      "description": "Distance from 7 to 3 (same subtree)",
      "query": {"val1": 7, "val2": 3},
      "expected": {
        "distance": 2,
        "path": [7, 5, 3],
        "pathLength": 3
      }
    },
    {
      "description": "Distance from node to itself",
      "query": {"val1": 5, "val2": 5},
      "expected": {
        "distance": 0,
        "path": [5],
        "pathLength": 1
      }
    },
    {
      "description": "Distance from root to leaf",
      "query": {"val1": 10, "val2": 20},
      "expected": {
        "distance": 2,
        "path": [10, 15, 20],
        "pathLength": 3
      }
    },
    {
      "description": "Non-existent node should return -1",
      "query": {"val1": 3, "val2": 100},
      "expected": {
        "distance": -1
      }
    },
    {
      "description": "Both nodes non-existent should return -1",
      "query": {"val1": 99, "val2": 100},
      "expected": {
        "distance": -1
      }
    }
  ],
  "additionalTestCases": [
    {
      "name": "Larger tree",
      "values": [50, 25, 75, 10, 30, 60, 90, 5, 15, 27, 35],
      "query": {"val1": 5, "val2": 35},
      "expected": {
        "distance": 4,
        "path": [5, 10, 25, 30, 35]
      }
    }
  ]
}
